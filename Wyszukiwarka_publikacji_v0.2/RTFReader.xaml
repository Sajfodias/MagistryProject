<Window x:Class="Wyszukiwarka_publikacji_v0._2.RTFReader"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wyszukiwarka_publikacji_v0._2"
        mc:Ignorable="d"
        Title="RTFReader" Height="299" Width="300">
    <Grid>
        <RichTextBox x:Name="RTFContent" Margin="10,10,10,62" >
            <FlowDocument IsHyphenationEnabled="True">
                <Paragraph>
                    <Run Text=" "/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <Button x:Name="loadRTFBtn" Content="Load RTF" HorizontalAlignment="Left" Margin="10,0,0,23" Width="75" Click="loadRTFBtn_Click" Height="24" VerticalAlignment="Bottom"/>

    </Grid>
</Window>
