<Window x:Class="Wyszukiwarka_publikacji_v0._2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wyszukiwarka_publikacji_v0._2"
        mc:Ignorable="d"
        Title="MainWindow" Height="480.79" Width="525">
    <Grid>
        <Grid Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="208*"/>
                <ColumnDefinition Width="289*"/>
            </Grid.ColumnDefinitions>
            <Label x:Name="labeAuthor" Content="Authors:" HorizontalAlignment="Left" Margin="0" VerticalAlignment="Top" Width="54"/>
            <TextBox x:Name="txtboxAuthors" HorizontalAlignment="Left" Height="23" Margin="0,26,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="189"/>
            <Label x:Name="labelYearFrom" Content="From year:" HorizontalAlignment="Left" Margin="0,54,0,0" VerticalAlignment="Top" Width="66"/>
            <TextBox x:Name="txtboxYearFrom" HorizontalAlignment="Left" Height="23" Margin="0,85,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="189"/>
            <Label x:Name="labelYearTo" Content="To year:" HorizontalAlignment="Left" Margin="0,113,0,0" VerticalAlignment="Top"/>
            <TextBox x:Name="txtboxToYear" HorizontalAlignment="Left" Height="23" Margin="0,139,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="189"/>
            <Label x:Name="labelKeyWords" Content="Keywords:" HorizontalAlignment="Left" Margin="0,167,0,0" VerticalAlignment="Top"/>
            <TextBox x:Name="txtboxKeyWords" HorizontalAlignment="Left" Height="23" Margin="0,193,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="189"/>
            <ComboBox x:Name="cmbboxInstitution" HorizontalAlignment="Left" Margin="0,252,0,0" VerticalAlignment="Top" Width="189"/>
            <Label x:Name="labelInstitution" Content="Institution:" HorizontalAlignment="Left" Margin="0,221,0,0" VerticalAlignment="Top"/>
            <Label x:Name="labelInstitutionUnit" Content="Institution Unit:" HorizontalAlignment="Left" Margin="0,279,0,0" VerticalAlignment="Top"/>
            <ComboBox x:Name="cmbboxInstitutionUnit" HorizontalAlignment="Left" Margin="0,310,0,0" VerticalAlignment="Top" Width="189"/>
            <Button x:Name="btnSearch" Content="Bibtex download" HorizontalAlignment="Left" Margin="0,337,0,0" VerticalAlignment="Top" Width="92" Height="43" Click="btnSearch_Click"/>
            <Button x:Name="btnClear" Content="Rtf download" HorizontalAlignment="Left" Margin="97,337,0,0" VerticalAlignment="Top" Width="92" Height="43" Click="btnClear_Click"/>
            <Button Content="K-means" HorizontalAlignment="Left" Margin="0,385,0,0" VerticalAlignment="Top" Width="92" Height="35" Click="ClusterizationProcessingBtn"/>
            <Button Content="K-means++" HorizontalAlignment="Left" Margin="97,385,0,0" VerticalAlignment="Top" Width="92" Height="35" Click="Button_Click"/>
        </Grid>
        <DataGrid x:Name="dataGrid" Margin="240,10,10,10"/>

    </Grid>
</Window>
